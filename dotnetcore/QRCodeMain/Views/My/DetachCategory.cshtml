@model QRCodeMain.Models.MyViewModels.UpdateCategoryViewModel

@{
    ViewData["Title"] = "Detach";
}

<h2>Delete</h2>

<h3>Are you sure you want to detach category: @Model.Category.Title from @Model.Article.Title?</h3>
<div>
    
    <form asp-action="DetachCategory">
        <input type="hidden" asp-for="Category.CategoryId" />
        <input type="hidden" asp-for="Article.ArticleId" />
        <input type="submit" value="Detach" class="btn btn-default" /> |
        <a asp-action="Details">Back to Article</a>
    </form>
</div>
