@model QRCodeMain.Models.MyStatisticsViewModels.NewTestViewModel

@{
    ViewData["Title"] = "Vocabulary Test";
}

<h2>Vocabulary Test</h2>

<form asp-action="SubmitTest" asp-controller="MyStatistics" method="get">
    <input type="hidden" asp-for="@Model.Test.MyVocabularyTestId"/>
    @for (var i = 0; i < Model.Test.VocabularyTestDetails.Count; i++)
    {
        var item = Model.Test.VocabularyTestDetails[i];
        <h3>No.@(i+1): @item.WordUnicode</h3>
        <ul>
            <li><p>A: @item.AnswerContentA</p></li>
            <li><p>B: @item.AnswerContentB</p></li>
            <li><p>C: @item.AnswerContentC</p></li>
            <li><p>D: @item.AnswerContentD</p></li>
        </ul>
        <p>You choose: <input type="text" id="@item.WordUnicode" name="FA@item.WordUnicode" asp-for="@item.FinalAnswer" /></p>
        <input type="hidden" name="@item.WordUnicode" asp-for="@item.WordUnicode"/>
        <br />
    }
    <button type="submit" name="action">Submit</button>
</form>
