@model QRCodeMain.Models.MyStatisticsViewModels.MyStatisticsViewModel

@{
    ViewData["Title"] = "My Vocabulary";
}

<h2>My Vocabulary Home</h2>

<div class="well">
    <h3>Language: @Model.MyVocabulary.Language.LanguageName</h3>
    <h3>Score: @Model.MyVocabulary.CurrentScore</h3>
    <h3>Test Times: @Model.MyVocabulary.TotalTestCount</h3>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="New Test" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
